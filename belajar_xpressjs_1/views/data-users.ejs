<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      .css-serial {
  counter-reset: serial-number;  /* Atur penomoran ke 0 */
}
.css-serial td:first-child:before {
  counter-increment: serial-number;  /* Kenaikan penomoran */
  content: counter(serial-number);  /* Tampilan counter */
}
.tambah-user{
  text-decoration: none;
font-size: 30px;
}
.tambah-user:hover{
 color: aquamarine;
}
</style>
    </style>
  </head>
  <body>
    <h3>Data user</h3>
    <table border="1" class="css-serial">
      <thead>
        <tr>
          <th>No</th>
          <th>Email</th>
          <th>Password</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach((user) => { %>
        <tr>
          <td></td>
          <td><%= user.email %></td>
          <td><%= user.password %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <p></p>
    <a href="/register" class="tambah-user">Tambah User</a>
  </body>
</html>
